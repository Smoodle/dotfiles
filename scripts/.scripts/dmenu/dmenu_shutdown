#!/bin/bash

actions=("shutdown\nrestart\nlock\nlogout\nsleep\nhibernate\nrestart dwm")
action=$(echo -e $actions | dmenu -i -p "ï€‘ ")
case "$action" in
    logout)
        killall xinit
        ;;

    restart)
        systemctl reboot
        ;;

    lock)
        slock
        ;;

    shutdown)
        systemctl poweroff
        ;;

    sleep)
        systemctl suspend
        ;;

    hibernate)
        systemctl hibernate
        ;;
	"restart dwm")
		xsetroot -name "fsignal:1"
		;;
esac

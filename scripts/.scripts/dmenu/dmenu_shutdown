#!/bin/bash

actions=("shutdown\nrestart\nlogout\nsleep\nhibernate")
action=$(echo -e $actions | dmenu -p "ï€‘ ")
case "$action" in
    logout)
        killall xinit
        ;;
        
    restart)
        systemctl reboot
        ;;

    shutdown)
        systemctl poweroff
        ;;

    sleep)
        systemctl suspend
        ;;

    hibernate)
        systemctl hibernate
        ;;
esac


#!/bin/bash

[ ! "$(playerctl -p spotify status 2>&1)" = "Playing" ] && exit 33;

# Define cursor icons
ICON=$(xrdb -query | grep 'color4'| awk 'NR==1{print $NF}')
FOREGROUND=$(xrdb -query | grep 'foreground'| awk 'NR==1{print $NF}')

if [ -z $ICON ] || [ -z $FOREGROUND ]; then
    ICON="#ffffff"
    FOREGROUND="#ffffff"
fi

songTitle="$(playerctl metadata title)"
songArtist="$(playerctl metadata artist)"
songInfo="$songTitle - $songArtist ";

#Display output
echo -ne "^c${ICON}^ÔÄÅ ^c${FOREGROUND}^${songInfo}";
